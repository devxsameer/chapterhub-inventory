<!-- Overlay (mobile only) -->
<div
  id="sidebarOverlay"
  class="fixed inset-0 bg-black/50 z-50 hidden xl:hidden"
></div>

<!-- Bottom hamburger (mobile only) -->
<button
  id="openSidebar"
  class="cursor-pointer xl:hidden fixed bottom-5 right-5 z-55 bg-neutral-800 text-neutral-50 p-2 rounded-full shadow-lg flex items-center justify-center text-2xl"
>
  <!-- Hamburger icon -->
  <svg
    id="hamburgerIcon"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
    />
  </svg>

  <!-- X icon (hidden initially) -->
  <svg
    id="closeIcon"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-6 hidden"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M6 18 18 6M6 6l12 12"
    />
  </svg>
</button>

<!-- Sidebar -->
<nav
  id="sidebar"
  class="fixed top-0 left-0 bottom-0 w-64 shrink-0 xl:rounded-tr-xl overflow-hidden bg-neutral-900 p-4 z-55 transform -translate-x-full transition-transform duration-300 xl:translate-x-0 xl:flex xl:top-12"
>
  <ul class="flex flex-col gap-2 text-neutral-50 w-full">
    <li>
      <a
        href="/"
        class="flex gap-2 items-center p-2 py-1.5 shadow rounded-lg <%= currentPath === '/' ? 'bg-teal-900' : '' %>"
      >
        <%- include("icons/homeIcon") %>
        <span>Home</span>
      </a>
    </li>

    <li>
      <a
        href="/genres"
        class="flex gap-2 items-center p-2 py-1.5 shadow rounded-lg <%= currentPath.startsWith('/genres') ? 'bg-teal-900' : '' %>"
      >
        <%- include("icons/genresIcon") %>
        <span>Genres</span>
      </a>
    </li>

    <li>
      <a
        href="/books"
        class="flex gap-2 items-center p-2 py-1.5 shadow rounded-lg <%= currentPath.startsWith('/books') ? 'bg-teal-900' : '' %>"
      >
        <%- include("icons/booksIcon") %>
        <span>Books</span>
      </a>
    </li>
  </ul>
</nav>
