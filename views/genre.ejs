<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <div
      class="min-h-screen font-outfit text-neutral-950 bg-neutral-200 flex flex-col"
    >
      <%- include("partials/header") %>

      <div class="flex grow">
        <%- include("partials/sidebar") %>

        <div class="grow flex flex-col bg-neutral-50">
          <main class="grow">
            <div class="bg-neutral-200 p-4">
              <h2 class="text-4xl font-semibold mb-2">Genres</h2>
              <a
                href="/genres/new"
                class="text-sm bg-purple-400 px-3 py-1 rounded shadow"
                >Add a Genre</a
              >
            </div>
            <div class="p-6">
              <a
                class="p-3 bg-white rounded-lg shadow"
                href="/genres/<%= genre.id %>"
              >
                <%= genre.name %>
              </a>
            </div>
          </main>

          <%- include("partials/footer") %>
        </div>
      </div>
    </div>
  </body>
</html>
