<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body
    class="h-screen flex flex-col bg-neutral-200 font-outfit overflow-y-auto"
  >
    <%- include("partials/header") %>

    <div class="flex pt-12 h-full">
      <%- include("partials/sidebar") %>
      <div class="xl:ml-64 flex-1">
        <main class="bg-neutral-50">
          <div class="bg-neutral-200 p-4 mb-4 sticky top-12">
            <h2 class="text-3xl font-semibold mb-2">Create New Genre</h2>
            <a href="/genres" class="text-sm underline">Back to Genres</a>
          </div>

          <div class="p-6 max-w-2xl">
            <% if (errors.length) { %>
            <ul class="mb-4 text-red-600">
              <% errors.forEach(err => { %>
              <li><%= err.msg %></li>
              <% }) %>
            </ul>
            <% } %>

            <form action="" method="POST" class="space-y-4 max-w-xl">
              <div>
                <label class="block mb-1 font-medium">Name</label>
                <input
                  type="text"
                  name="name"
                  required
                  maxlength="100"
                  class="border p-2 w-full rounded"
                  value="<%= formData.name %>"
                  placeholder="Enter genre name"
                />
              </div>

              <div>
                <label class="block mb-1 font-medium">Description</label>
                <textarea
                  name="description"
                  rows="4"
                  maxlength="2000"
                  class="border p-2 w-full rounded"
                  placeholder="Optional description of the genre"
                >
<%= formData.description %></textarea
                >
              </div>

              <div>
                <button type="submit" class="btn-lg">Create Genre</button>
                <a href="/genres" class="ml-4 underline text-sm">Cancel</a>
              </div>
            </form>
          </div>
        </main>
        <%- include("partials/footer") %>
      </div>
    </div>
    <script src="/js/sidebar.js"></script>
  </body>
</html>
