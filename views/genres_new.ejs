<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body
    class="h-screen flex flex-col bg-neutral-200 font-outfit overflow-y-auto"
  >
    <%- include("partials/header") %>

    <div class="flex pt-12 h-full">
      <%- include("partials/sidebar") %>

      <main class="ml-64 flex-1 flex flex-col">
        <div class="grow p-6">
          <div class="bg-white rounded-xl shadow p-6">
            <h2 class="text-2xl font-semibold mb-6">Create New Genre</h2>

            <% if (errors.length) { %>
            <ul class="mb-4 text-red-600">
              <% errors.forEach(err => { %>
              <li><%= err.msg %></li>
              <% }) %>
            </ul>
            <% } %>

            <form action="/genres/new" method="POST" class="space-y-4 max-w-xl">
              <div>
                <label class="block mb-1 font-medium">Name</label>
                <input
                  type="text"
                  name="name"
                  required
                  maxlength="100"
                  class="w-full p-3 rounded-lg border border-neutral-300 focus:outline-none focus:ring-2 focus:ring-neutral-600"
                  value="<%= formData.name %>"
                  placeholder="Enter genre name"
                />
              </div>

              <div>
                <label class="block mb-1 font-medium">Description</label>
                <textarea
                  name="description"
                  rows="4"
                  maxlength="2000"
                  class="w-full p-3 rounded-lg border border-neutral-300 focus:outline-none focus:ring-2 focus:ring-neutral-600"
                  placeholder="Optional description of the genre"
                ><%= formData.description %></textarea
                >
              </div>

              <button
                type="submit"
                class="px-6 py-2 bg-neutral-900 text-neutral-100 rounded-lg hover:bg-neutral-800 transition"
              >
                Create Genre
              </button>
            </form>
          </div>
        </div>

        <%- include("partials/footer") %>
      </main>
    </div>
  </body>
</html>
